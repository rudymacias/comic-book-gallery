@model ComicBookGallery.Models.ComicBook

@{

}
&nbsp;
<div class="jumbotron text-center">
    <h1>@Model.SeriesTitle</h1>
    <p class="lead">@Html.Raw(Model.DescriptionHtml)</p>
    <p><a class="btn btn-lg btn-success" href="#" role="button">Issue #@Model.IssueNumber</a></p>
</div>
@if (Model.Artists.Length > 0)
{
    <div class="page-header">
        <h3>Artists</h3>
    </div>
    <ul class="list-group">
        @foreach (var artist in Model.Artists)
        {
        <li class="list-group-item">@artist.Role: @artist.Name</li>
        }
    </ul>
}
else
{
    <div class="alert alert-warning" role="alert">
        No artists available.
    </div>
}
