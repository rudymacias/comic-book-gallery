&nbsp;
<div class="jumbotron text-center">
    <h1>@ViewBag.SeriesTitle</h1>
    <p class="lead">@Html.Raw(ViewBag.Description)</p>
    <p><a class="btn btn-lg btn-success" href="#" role="button">Issue #@ViewBag.IssueNumber</a></p>
</div>
@if (ViewBag.Artists.Length > 0)
{
    <div class="page-header">
        <h3>Artists</h3>
    </div>
    <ul class="list-group">
        @foreach (var artist in ViewBag.Artists)
        {
            <li class="list-group-item">@artist</li>
        }
    </ul>
}
else
{
    <div class="alert alert-warning" role="alert">
        No artists available.
    </div>
}
